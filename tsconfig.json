{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "jsx": "react",    
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "allowJs": true,
    "pretty": true,
    "paths": {
      "*": [
          "src/*"
      ]
    },    
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
     // types option has been previously configured
  },  
  "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "useCache": false
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.spec.ts?",
    "**/*-test.js?"
  ]
}
